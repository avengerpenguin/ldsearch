<!DOCTYPE html>
<html>
<body>
<form action="/search" method="get">
    <input type="text" name="q"/>
    <input type="submit"/>
</form>

{{#results}}
<h2>Results</h2>

<p>Total found: {{total}}</p>

<ol>
    {{#hits}}
    <li style="clear: both">
        <h3>
            {{#schema_url}}
                <a href="{{.}}">
            {{/schema_url}}
            {{#schema_name}}
                {{.}}
            {{/schema_name}}
            {{#schema_url}}
                </a>
            {{/schema_url}}
        </h3>
        {{#schema_image}}
            <img src="{{.}}" height="100" style="float: left; padding-right: 1em; margin-bottom: 2em"/>
        {{/schema_image}}
        {{#schema_description}}
        <p>{{.}}</p>
        {{/schema_description}}
        {{#schema_url}}
            <p>URI: {{.}}</p>
            <p>Graph: <a href="/graph?uri={{.}}">Graph</a></p>
        {{/schema_url}}
        </ul>
    </li>
    {{/hits}}
</ol>
{{/results}}

</body>
</html>
